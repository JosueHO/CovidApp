@model List<CovidDTO.Model.dtoReport>
@{
    bool displayProvince = false;
    if (Model.Count > 0)
    {
        displayProvince = Model.First().isRegion;
    }
    string Cases = "";
    string Deaths = "";
}
@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Region)
            </th>
            @if (displayProvince)
            {
                <th>
                    @Html.DisplayNameFor(model => model.First().Province)
                </th>
            }
            <th>
                @Html.DisplayNameFor(model => model.First().Cases)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Deaths)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            Cases = string.Format("{0:0,0}", item.Cases);
            Deaths = string.Format("{0:0,0}", item.Deaths);
            <tr>
                <td class="alignLeft">
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                @if (displayProvince)
                {
                    <td class="alignLeft">
                        @Html.DisplayFor(modelItem => item.Province)
                    </td>
                }
                <td class="alignRigth">
                    @Html.DisplayFor(modelItem => Cases)
                </td>
                <td class="alignRigth">
                    @Html.DisplayFor(modelItem => Deaths)
                </td>
            </tr>
        }

    </table>
}